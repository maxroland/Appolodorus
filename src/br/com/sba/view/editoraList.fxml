<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" VBox.vgrow="ALWAYS"
	xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="br.com.sba.ctrl.EditoraListController">
	<children>
		<HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0"
			styleClass="VBox" stylesheets="@main.css" VBox.vgrow="NEVER">
			<children>
				<Button fx:id="btnNew" mnemonicParsing="false" onAction="#onNew"
					text="Novo">
					<HBox.margin>
						<Insets />
					</HBox.margin>
				</Button>
				<Button fx:id="btnEdit" mnemonicParsing="false" onAction="#onEdit"
					text="Editar">
					<HBox.margin>
						<Insets left="10.0" right="10.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="btnDelete" mnemonicParsing="false" onAction="#onDelete"
					text="Excluir" />
			</children>
		</HBox>
		<TableView fx:id="tbl" tableMenuButtonVisible="true"
			VBox.vgrow="ALWAYS">
			<columns>
				<TableColumn fx:id="id" minWidth="50.0" prefWidth="50.0"
					text="ID" />
				<TableColumn fx:id="nameEditora" minWidth="100.0"
					prefWidth="200.0" text="Editora" />
			</columns>
			<VBox.margin>
				<Insets top="10.0" />
			</VBox.margin>
		</TableView>
	</children>
</VBox>
